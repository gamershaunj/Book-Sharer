<%- include('partials/header') %>
<script src="/socket.io/socket.io.js"></script>
<body>
    <% let today = new Date().toDateString() %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navprop">
        <a class="navbar-brand navprop" href="/dashboard">Dashboard</a>
        <a class="navbar-link" href="/books">Books View</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active"><%= today %></li>
        </ul>   
        <button class="navbar-toggler"> 
        </button>       
    </nav>
    <div class = "container-fluid">
        <% Users.forEach(function(user){ %>
           <hr>
            <i><h3>Books requested --></i>    <%=   user.outputbooks %></h3>
            <i><h3>Books ready to share! --> </i>  <%=  user.inputbooks %></h3>
            <div class="row pcredits" >
                <div class="col-sm">
                    <p>Posted by <%= user.username   %> | Time of posting: <%= user.date   %> </p>
                    <button class="btn btn-info send" >Send Message</button>
                    <p class="magicdata" hidden><%= user.username   %></p>
                    <div id="textip">
                    </div>
                </div>
               
            </div>
        <% }) %>

    </div>
    


<%- include('partials/footer') %>
 
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="/action.js"></script>
</html>