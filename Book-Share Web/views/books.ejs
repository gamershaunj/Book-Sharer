<%- include('partials/header') %>

<body>
    <% let today = new Date().toDateString() %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navprop">
        <a class="navbar-brand navprop" href="/dashboard">Dashboard</a>
        <a class="navbar-link" href="/books">Books View</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active"><%= today %></li>
        </ul>   
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"> 
        </button>       
    </nav>
    <div class = "container-fluid">
        <% Users.forEach(function(user){ %>
           <hr>
            <i><h3>Books requested -->    <%=   user.outputbooks %></h3></i>
            <i><h3>Books ready to share! -->   <%=  user.inputbooks %></h3></i>
            <div class="row pcredits" >
                <div class="col-sm">
                    <p>Posted by <%= user.username   %> | Time of posting: <%= user.date   %> </p>

                </div>
               
         </div>
        <% }) %>

    </div>
    


<%- include('partials/footer') %>
 
</body>
</html>